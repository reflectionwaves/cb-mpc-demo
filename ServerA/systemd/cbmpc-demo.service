[Unit]
Description=cb-mpc demo service (Server A)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=%i
WorkingDirectory=%h/serverA-bundle-v2
EnvironmentFile=%h/serverA-bundle-v2/env
ExecStart=%h/serverA-bundle-v2/run/run-demo.sh
Restart=on-failure
RestartSec=3

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=false

[Install]
WantedBy=multi-user.target
